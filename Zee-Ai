  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Zee AI Chatbot</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      margin-top: 50px;
      background: #f0f0f0;
    }
    #chat {
      width: 400px;
      border: 2px solid #333;
      border-radius: 8px;
      background: #fff;
      padding: 10px;
      display: flex;
      flex-direction: column;
    }
    #messages {
      height: 350px;
      overflow-y: auto;
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 5px;
      background: #fafafa;
    }
    .user {
      color: blue;
      margin-bottom: 5px;
    }
    .bot {
      color: green;
      margin-bottom: 5px;
    }
    #input-area {
      display: flex;
    }
    #userInput {
      flex: 1;
      padding: 8px;
      font-size: 14px;
    }
    #sendBtn {
      padding: 8px 12px;
      font-size: 14px;
      margin-left: 5px;
      cursor: pointer;
      background: #333;
      color: #fff;
      border: none;
      border-radius: 4px;
    }
    #sendBtn:hover {
      background: #555;
    }
